<h1>Authors#index</h1>

<table class="table table-striped">
<tr>
	<th>Author Name</th>
	<th>Actions</th>
</tr>


<% @authors.each do |author| %>
<tr>
	<td><%= author.name %></td>
	<td>
		<%= link_to 'Edit', edit_author_path(author) %> |
		<%= link_to 'Delete', author_path(author), method: :delete, data: {confirm: 'are you sure?'} %> 
	</td>
</tr>


<% end %>


	
</table>