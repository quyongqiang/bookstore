<h2> <%= @category.name %></h2>



<div id="books-index">

	<% @books.each_slice(4) do |book4| %>
		<div class="row">
			<% book4.each do |book| %>
				<div class="col-md-3 col-sm-3">
					<h5><%= book.title  %></h5>
					<%= image_tag(book.coverpath) %>
					<%= link_to 'Read More', book_path(book), class:"btn btn-primary" %>
				</div>
			<% end %>
		</div>
	<% end %>

</div>