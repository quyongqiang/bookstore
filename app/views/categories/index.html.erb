<h1>Categories#index</h1>

<table class="table table-striped">
<tr>
	<th>Category Name</th>
	<th>Actions</th>
</tr>


<% @categories.each do |category| %>
<tr>
	<td><%= category.name %></td>
	<td>
		<%= link_to 'Edit', edit_category_path(category) %> |
		<%= link_to 'Delete', category_path(category), method: :delete, data: {confirm: 'are you sure?'} %> 

	</td>
</tr>


<% end %>


	
</table>